<Window
    x:Class="GeoGravityOverDose.Views.Pages.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GeoGravityOverDose.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:GeoGravityOverDose.ViewModels"
    xmlns:widget="clr-namespace:GeoGravityOverDose.Views.Widget"
    Title="MainWindow"
    Width="800"
    Height="450"
    Style="{StaticResource MaterialDesignWindow}"
    mc:Ignorable="d">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:AuthorizationViewModel}">
            <local:AuthorizationPage d:DataContext="{d:DesignInstance Type=vm:AuthorizationViewModel, IsDesignTimeCreatable=False}" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AdminViewModel}">
            <local:AdminPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CustomerPresentationViewModel}">
            <widget:CustomerPresentation />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentPresenter Content="{Binding CurrentVM}" />
        <ui:Snackbar x:Name="GlobalSnackbar" />
    </Grid>
</Window>
